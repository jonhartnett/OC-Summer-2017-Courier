<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.oc.courier.ui.ClientsController">
    <top>
        <Button mnemonicParsing="false" onAction="#addClient" text="Add client" BorderPane.alignment="CENTER" />
    </top>
    <center>
       <ScrollPane fitToHeight="true" fitToWidth="true" BorderPane.alignment="CENTER">
           <VBox fx:id="clientList" alignment="TOP_CENTER" />
       </ScrollPane>
   </center>
</BorderPane>
