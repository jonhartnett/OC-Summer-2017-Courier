<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="courier-types" transaction-type="RESOURCE_LOCAL">
        <!-- Persistence provider -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Entity classes -->
        <class>edu.oc.courier.data.Client</class>
        <class>edu.oc.courier.data.Driver</class>
        <class>edu.oc.courier.data.Invoice</class>
        <class>edu.oc.courier.data.Ticket</class>
        <class>edu.oc.courier.data.User</class>

        <properties>
            <!-- The JDBC URL to the database instance -->
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/oc-summer-2017-courier" />

            <!-- The database username -->
            <property name="javax.persistence.jdbc.user" value="application" />
            <property name="toplink.jdbc.url"
                      value="jdbc:mysql://localhost:3306/oc-summer-2017-courier?useSSL=false&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC"/>
            <property name="toplink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.url"
                      value="jdbc:mysql://localhost:3306/oc-summer-2017-courier?useSSL=false&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="openjpa.ConnectionURL"
                      value="jdbc:mysql://localhost:3306/oc-summer-2017-courier?useSSL=false&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC"/>
            <property name="openjpa.ConnectionDriverName" value="com.mysql.jdbc.Driver"/>
            <property name="eclipselink.jdbc.url"
                      value="jdbc:mysql://localhost:3306/oc-summer-2017-courier?useSSL=false&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC"/>
            <property name="eclipselink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
        </properties>
    </persistence-unit>
</persistence>